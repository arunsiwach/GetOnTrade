        <div class="row">
            @if (Model.Count() == 0)
            {
                <div align="center">
                    <p>No Record's found.</p>
                </div>
            }
            else
            {
                <div class="col-lg-7">                                     
                                                       
                    @*foreach (var item in Model.Where(s => s.Symbol.Contains("FORD")))*@

                    @foreach (var item in Model)
                    {
                        
                        <div class="card card-primary card-outline">
                            <div class="card-body">
                                <h5 class="card-title"><b>@item.Symbol - @item.CompanyName</b></h5> <br />
                                <p>
                                    <span>
                                        Market Price -
                                        <b>@item.MarketPrice</b>
                                    </span>
                                    <span>
                                        Change -
                                        <b>@item.PercentChange</b>
                                    </span>
                                    <span>
                                        Total Shares -
                                        <b>@item.OutStandingShares</b>
                                    </span>
                                    <span>
                                        Volume -
                                        <b>@item.AverageVolume</b>
                                    </span>
                                    <span>
                                        Market Cap -
                                        <b>@item.MarketCap</b>
                                    </span>
                                </p>
                                <p>
                                    @foreach (var items in item.AllNews)
                                    {
                                        <h6 class="card-text">
                                            <a href='@items.NewsLink'>
                                                @items.Title
                                            </a> -
                                            <a href='@items.NewsSourceLink' class="card-link">Source</a>
                                        </h6>
                                    }
                                </p>
                                <p>
                                    All Tweets
                                    @foreach (var items in item.AllTweets)
                                    {
                                        <h6 class="card-text">@items.Title</h6>
                                    }
                                </p>
                            </div>
                        </div>

                    }
